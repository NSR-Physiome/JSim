#!/bin/sh
 
. jsbuild.path
FP=$JSIMNATIVE/fpack
rm -Rf $FP

CLEAN=0
if [ "$1" = "-clean" ]
then
  CLEAN=1
  echo "==== Cleaning the JSim Fortran model pack"
  cd $JSIMSRC/fpack
  OLIST1=`find . -name "*.o"`
  OLIST2=`find . -name "*.a"`
  rm $OLIST1 $OLIST2
  exit 0
fi

echo "==== Building the JSim Fortran model pack"
mkdir $FP 
jsbuild.fpleg
jsbuild.fplib
jsbuild.fpmodel

